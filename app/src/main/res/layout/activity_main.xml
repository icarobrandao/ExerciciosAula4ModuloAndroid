<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_text_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />

    <EditText
        android:id="@+id/edit_text_cargo"
        android:layout_below="@+id/edit_text_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cargo"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/edit_text_salario"
        android:layout_below="@id/edit_text_cargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SalÃ¡rio"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        />
    
    <Button
        android:id="@+id/button_open_activity_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Calcular"
        />


</RelativeLayout>